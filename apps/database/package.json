  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "6.18.0",
    "fast-glob": "3.3.3"
  },
  "devDependencies": {
    "prisma": "6.18.0",
    "tsx": "4.20.6"
  }
}
