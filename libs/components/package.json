{
  "name": "@mmtm/components",
  "version": "1.0.0",
  "private": true,
  "description": "Momentum shared UI components library",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./styles": "./src/styles/globals.css"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react --minify",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome lint ./src",
    "format": "biome format ./src --write"
  },
  "dependencies": {
    "chart.js": "4.5.0",
    "clsx": "2.1.0",
    "react-chartjs-2": "5.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.2.0",
    "@testing-library/react": "14.1.2",
    "@testing-library/user-event": "14.5.2",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@vitejs/plugin-react": "4.2.1",
    "jsdom": "23.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tsup": "8.0.1"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
