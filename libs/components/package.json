{
  "name": "@mmtm/components",
  "version": "1.0.0",
  "private": true,
  "description": "Momentum shared UI components library",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./styles": "./src/styles/globals.css"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react --minify",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "biome format ./src --write",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint ./src --write --unsafe"
  },
  "dependencies": {
    "chart.js": "4.5.0",
    "clsx": "2.1.1",
    "react-chartjs-2": "5.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.6.4",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.7",
    "@vitejs/plugin-react": "5.0.0",
    "jsdom": "26.1.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tsup": "8.5.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  }
}
