{
  "name": "momentum",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "e2e-tests",
    "libs/components",
    "libs/plugins/*/*"
  ],
  "scripts": {
    "test": "turbo test",
    "test:coverage": "turbo test -- --coverage",
    "test:changed": "turbo test --filter='...[HEAD^1]'",
    "test:e2e": "yarn workspace e2e-tests run test:e2e",
    "format": "turbo format",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "lint:fix-safe": "turbo lint -- --write",
    "lint:fix-changed": "turbo lint:fix --filter='...[HEAD^1]'",
    "lint:changed": "turbo lint --filter='...[HEAD^1]'",
    "build": "turbo build",
    "start:api": "yarn workspace @mmtm/api run dev",
    "start:dashboard": "yarn workspace @mmtm/dashboard run dev",
    "start:db": "yarn workspace @mmtm/database run dev",
    "start:storybook": "yarn workspace @mmtm/storybook run dev",
    "dev": "yarn workspace @mmtm/database run generate && concurrently \"yarn:start:*\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@types/node": "24.10.0",
    "@types/supertest": "6.0.3",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "concurrently": "9.2.1",
    "supertest": "7.1.4",
    "turbo": "2.6.1",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "packageManager": "yarn@4.11.0"
}
