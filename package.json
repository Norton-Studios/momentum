{
  "name": "developer-productivity",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "e2e-tests",
    "plugins/*/*"
  ],
  "scripts": {
    "test": "yarn workspaces foreach -A run test",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "start:api": "yarn workspace @developer-productivity/api run dev",
    "start:frontend": "yarn workspace @developer-productivity/frontend run dev",
    "start:db": "yarn workspace @developer-productivity/database run dev",
    "dev": "yarn workspace @developer-productivity/database run generate && concurrently \"yarn:start:*\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "concurrently": "^9.1.2",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@4.9.2"
}
