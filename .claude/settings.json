{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && yarn format"
          },
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && yarn lint:fix"
          }
        ]
      },
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && yarn test"
          },
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && yarn build"
          }
        ]
      },
      {
        "matcher": "Bash(gh pr create:*)",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && yarn test:e2e"
          }
        ]
      }
    ]
  }
}
