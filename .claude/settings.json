{
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && yarn test"
          },
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && yarn build"
          }
        ]
      },
      {
        "matcher": "Bash(gh pr create:*)",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && yarn test:e2e"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && yarn format"
          },
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && if yarn lint:fix; then echo '✅ LINTING COMPLETE - All issues resolved. Claude may proceed.'; else echo '❌ LINTING FAILED - Claude must investigate and fix remaining issues before proceeding!'; exit 1; fi"
          }
        ]
      }
    ]
  }
}
