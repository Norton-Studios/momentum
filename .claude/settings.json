{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Git(commit:*)|Bash(^git\\s+commit\\b.*)",
        "hooks": [
          { "type": "command", "command": "cd $CLAUDE_PROJECT_DIR && yarn test" },
          { "type": "command", "command": "cd $CLAUDE_PROJECT_DIR && yarn build" }
        ]
      },
      {
        "matcher": "Bash(^gh\\s+pr\\s+create\\b.*)|Git(pr:create:*)",
        "hooks": [
          { "type": "command", "command": "cd $CLAUDE_PROJECT_DIR && yarn test:e2e" }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          { "type": "command", "command": "cd $CLAUDE_PROJECT_DIR && yarn format" },
          { "type": "command", "command": "cd $CLAUDE_PROJECT_DIR && if yarn lint:fix; then echo '✅ LINT OK'; else echo '❌ LINT FAIL'; exit 1; fi" }
        ]
      }
    ]
  }
}
