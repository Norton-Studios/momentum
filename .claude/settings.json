{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash.git\\s+commit\\b.*",
        "hooks": [
          { "type": "command", "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/pre-commit.sh" }
        ]
      },
      {
        "matcher": "Bash(^gh\\s+pr\\s+create\\b.*)|Git(pr:create:*)",
        "hooks": [
          { "type": "command", "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/pre-pr.sh" }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          { "type": "command", "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/post-write.sh" }
        ]
      }
    ]
  }
}
